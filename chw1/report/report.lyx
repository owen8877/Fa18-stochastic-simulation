\begin_layout Section
Symbols used
\end_layout

\begin_layout Itemize
Hamiltonian 
\begin_inset Formula $H$
\end_inset

 :
\begin_inset Formula 
\[
H\left(\sigma\right)\triangleq-J\sum_{\left\langle i,j\right\rangle }\sigma_{i}\sigma_{j}-h\sum_{i}\sigma_{i}.
\]

\end_inset


\end_layout

\begin_layout Itemize
Internal energy 
\begin_inset Formula $U$
\end_inset

 :
\begin_inset Formula 
\begin{align*}
U & \triangleq\left\langle H\left(\sigma\right)\right\rangle =-\dfrac{\partial\ln Z}{\partial\beta},\\
u & \triangleq\frac{U}{N^{d}}.
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Specific heat 
\begin_inset Formula $C$
\end_inset

 :
\begin_inset Formula 
\begin{align*}
C & \triangleq\dfrac{\partial U}{\partial T}=\beta^{2}\cdot\text{Var}H\left(\sigma\right),\\
c & \triangleq\frac{C}{N^{d}}.
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Magnetization 
\begin_inset Formula $M$
\end_inset

 :
\begin_inset Formula 
\begin{align*}
M & \triangleq\left\langle \sum_{i}\sigma_{i}\right\rangle ,\\
m & \triangleq\frac{M}{N^{d}}.
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Magnetic susceptibility 
\begin_inset Formula $X$
\end_inset

 :
\begin_inset Formula 
\begin{align*}
X & \triangleq\dfrac{\partial M}{\partial h}=\beta\cdot\text{Var}M,\\
\chi & \triangleq\frac{X}{N^{d}}.
\end{align*}

\end_inset


\end_layout

